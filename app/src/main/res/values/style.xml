<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/main</item>
        <item name="colorPrimaryDark">@color/PrimaryLight</item>
        <item name="colorAccent">@color/accent</item>
    </style>
    <style name="ThemeActionBar" parent="Widget.AppCompat.Light.ActionBar.Solid">
        <item name="android:background"> @null </item>
        <!-- Support library compatibility -->
        <item name="background">@null</item>
        <item name="android:displayOptions"> showHome|useLogo</item>
        <item name="displayOptions">showHome|useLogo</item>

    </style>

    <style name="myrating_bar" parent="android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/myrating_bar</item>
        <item name="android:minHeight">@dimen/_40sdp</item>
        <item name="android:maxHeight">@dimen/_20sdp</item>
    </style>
    <declare-styleable name="StepView">
        <attr format="reference" name="sv_selectedCircleColor"/>
        <attr format="color" name="sv_selectedCircleRadius"/>
        <attr format="color" name="sv_selectedTextColor"/>
        <attr format="color" name="sv_selectedStepNumberColor"/>
        <attr format="color" name="sv_doneStepMarkColor"/>
        <attr format="color" name="sv_doneCircleColor"/>
        <attr format="color" name="sv_selectedCircleStroke"/>
        <attr format="color" name="sv_doneCircleRadius"/>
        <attr format="color" name="sv_doneTextColor"/>
        <attr format="color" name="sv_nextTextColor"/>
        <attr format="color" name="sv_nextStepLineColor"/>
        <attr format="reference" name="sv_doneStepLineColor"/>
        <attr format="dimension" name="sv_stepPadding"/>
        <attr format="dimension" name="sv_stepNumberTextSize"/>
        <attr format="dimension" name="sv_textPadding"/>
        <attr format="dimension" name="sv_stepLineWidth"/>
        <attr format="dimension" name="sv_textSize"/>
        <attr format="color" name="sv_background"/>
        <attr format="integer" name="sv_animationDuration"/>
        <attr format="reference" name="sv_stepViewStyle"/>
        <attr format="enum" name="sv_animationType">
            <enum name="Line" value="0"/>
            <enum name="Circle" value="1"/>
            <enum name="All" value="2"/>
            <enum name="None" value="3"/>
        </attr>
        <attr format="integer" name="sv_stepsNumber"/>
        <attr format="reference" name="sv_steps"/>
        <attr format="reference" name="sv_typeface"/>
        <attr format="boolean" name="sv_nextStepCircleEnabled"/>
        <attr format="reference" name="sv_nextStepCircleColor"/>
    </declare-styleable>

    <style name="StepView">
        <item name="sv_selectedCircleColor">@color/main</item>
        <item name="sv_selectedCircleRadius">@dimen/_12sdp</item>
        <item name="sv_stepNumberTextSize">@dimen/_12sdp</item>
        <item name="sv_doneStepMarkColor">@color/main</item>
        <item name="sv_doneCircleColor">@color/main</item>
        <item name="sv_doneCircleRadius">@dimen/_34sdp</item>
        <item name="sv_nextStepLineColor">@color/soft</item>
        <item name="sv_doneStepLineColor">@color/main</item>
        <item name="sv_stepPadding">@dimen/_12sdp</item>
        <item name="sv_textPadding">@dimen/_14sdp</item>
        <item name="sv_stepLineWidth">0.5dp</item>
        <item name="sv_animationDuration">200</item>
        <item name="sv_textSize">@dimen/_14sdp</item>
        <item name="sv_animationType">Line</item>
    </style>


</resources>
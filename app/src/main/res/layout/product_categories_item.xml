<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_gravity="center_horizontal">

    <androidx.cardview.widget.CardView
        android:id="@+id/pcCardView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_122sdp"
        android:layout_gravity="center"
        android:padding="@dimen/_10sdp"
        android:layout_margin="@dimen/_10sdp"
        android:clickable="true"
        android:foregroundGravity="center"
        android:backgroundTint="@null"
        app:cardBackgroundColor="@color/carview"
        app:cardCornerRadius="@dimen/_15sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.49"
        tools:ignore="MissingConstraints">

        <ImageView
            android:id="@+id/pccatIcon"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_17sdp"
            android:layout_gravity="top|center"
            android:layout_marginTop="@dimen/_22sdp"
            android:backgroundTint="#28B0CED9"
            android:foregroundGravity="top"
            android:scaleType="fitCenter"
            android:src="@drawable/fruits" />

        <TextView
            android:id="@+id/pccatName"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_16sdp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/_58sdp"
            android:fontFamily="@font/poppins"
            android:gravity="center"
            android:text=" "
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:textFontWeight="700"
            android:textSize="@dimen/_13sdp" />

        <TextView
            android:id="@+id/pccatItems"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:fontFamily="@font/lato"
            android:layout_marginBottom="@dimen/_25sdp"
            android:text=" Items"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:textFontWeight="400"
            android:textSize="@dimen/_13sdp" />
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>

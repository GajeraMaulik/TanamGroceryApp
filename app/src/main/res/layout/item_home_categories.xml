<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/_75sdp"
    android:orientation="horizontal"
    android:layout_margin="@dimen/_10sdp"
    android:layout_gravity="center_horizontal">

    <androidx.cardview.widget.CardView
        android:id="@+id/hcCardView"
        android:layout_width="@dimen/_70sdp"
        android:layout_height="@dimen/_75sdp"
        android:layout_gravity="center"
        android:foregroundGravity="center"
        app:cardBackgroundColor="@color/carview"
        app:cardCornerRadius="@dimen/_12sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.49"
        tools:ignore="MissingConstraints">

        <ImageView
            android:id="@+id/cat_icon"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_15sdp"
            android:layout_gravity="top|center"
            android:layout_marginTop="@dimen/_10sdp"
            android:backgroundTint="#28B0CED9"
            android:foregroundGravity="top"
            android:scaleType="fitCenter"
            android:src="@drawable/fruits"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/cat_name"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_16sdp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/_35sdp"
            android:fontFamily="@font/poppins"
            android:gravity="center"
            android:text="@string/fragment_home_cat_name"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:textFontWeight="700"
            android:textSize="@dimen/_10sdp"
            tools:ignore="UnusedAttribute" />

        <TextView
            android:id="@+id/cat_items"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_15sdp"
            android:fontFamily="@font/lato"
            android:text="@string/fragment_home_items"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:textFontWeight="400"
            android:textSize="@dimen/_8sdp"
            tools:ignore="UnusedAttribute" />
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>

<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main"
    tools:context=".login.SignInActivity">


    <TextView
        android:id="@+id/app_name"
        android:layout_width="@dimen/_90sdp"
        android:layout_height="@dimen/_28sdp"
        android:layout_marginTop="@dimen/_26sdp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="@dimen/_96sdp"
        android:layout_marginEnd="@dimen/_96sdp"
        android:fontFamily="@font/poppins"
        android:gravity="center"
        android:padding="0dp"
        android:text="@string/App_name"
        android:textColor="#FFFFFF"
        android:textFontWeight="900"
        android:textSize="@dimen/_26sdp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints,RtlHardcoded" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="@dimen/_110sdp"
        android:layout_marginTop="@dimen/_12sdp"
        android:layout_marginEnd="@dimen/_110sdp"
        android:textFontWeight="400"
        android:text="Grocery App"
        android:textColor="#FFFFFF"
        android:textSize="@dimen/_10sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/app_name"
        app:lineHeight="20dp" />


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/_26sdp"
        android:background="@drawable/custom_backgroud"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="@dimen/_162sdp"
            android:layout_height="@dimen/_28sdp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="@dimen/_22sdp"
            android:layout_marginTop="@dimen/_27sdp"
            android:layout_marginEnd="@dimen/_105sdp"
            android:width="@dimen/_400sdp"
            android:fontFamily="@font/poppins"
            android:gravity="fill"
            android:text="Welcome back"
            android:textColor="#293041"
            android:textSize="@dimen/_20sdp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_weight="700"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:lineHeight="@dimen/_15sdp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="@dimen/_245sdp"
            android:layout_height="@dimen/_34sdp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="@dimen/_22sdp"
            android:layout_marginTop="@dimen/_6sdp"
            android:layout_marginEnd="@dimen/_22sdp"
            android:fontFamily="@font/lato"
            android:lineHeight="@dimen/_17sdp"
            android:padding="@dimen/_2sdp"
            android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor "
            android:textColor="#7D8FAB"
            android:textSize="@dimen/_10sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView4"
            app:lineHeight="@dimen/_15sdp" />


        <EditText
            android:id="@+id/user"
            android:layout_width="@dimen/_245sdp"
            android:layout_height="@dimen/_46sdp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="@dimen/_22sdp"
            android:layout_marginTop="@dimen/_21sdp"
            android:layout_marginEnd="@dimen/_22sdp"
            android:background="@drawable/custom_backgroud_edittext"
            android:drawableStart="@drawable/user"
            android:drawablePadding="@dimen/_9sdp"
            android:ems="10"
            android:hint="Username"
            android:inputType="textPersonName"
            android:padding="@dimen/_2sdp"
            android:paddingStart="@dimen/_14sdp"
            android:textColor=" #293041"
            android:textColorHint="#617D8FAB"
            android:textSize="@dimen/_15sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView5" />

        <EditText
            android:id="@+id/etPassword"
            android:layout_width="@dimen/_245sdp"
            android:layout_height="@dimen/_46sdp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="@dimen/_14sdp"
            android:background="@drawable/custom_backgroud_edittext"
            android:drawableStart="@drawable/password"
            android:drawablePadding="@dimen/_9sdp"
            android:ems="10"
            android:hint="Password"
            android:inputType="textPassword"
            android:padding="@dimen/_2sdp"
            android:paddingStart="@dimen/_14sdp"
            android:paddingEnd="@dimen/_15sdp"
            android:textColor=" #293041"
            android:textColorHint="#617D8FAB"
            android:textSize="@dimen/_15sdp"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="@+id/user"
            app:layout_constraintStart_toStartOf="@+id/user"
            app:layout_constraintTop_toBottomOf="@+id/user" />

        <ImageView
            android:id="@+id/ivEye"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_gravity="center"
            android:foregroundGravity="center"
            android:padding="@dimen/_5sdp"
            android:paddingEnd="@dimen/_6sdp"
            app:layout_constraintBottom_toBottomOf="@+id/etPassword"
            app:layout_constraintEnd_toEndOf="@+id/etPassword"
            app:layout_constraintTop_toTopOf="@+id/etPassword"
            app:srcCompat="@drawable/ic_visibility_off_eye" />

        <Button
            android:id="@+id/signinBtn"
            android:layout_width="@dimen/_245sdp"
            android:layout_height="@dimen/_46sdp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="@dimen/_22sdp"
            android:layout_marginTop="@dimen/_22sdp"
            android:layout_marginEnd="@dimen/_22sdp"
            android:width="@dimen/_70sdp"
            android:background="@drawable/fill_button_selector"
            android:elevation="50dp"
            android:text="SIGN IN"
            android:textColor="@drawable/fill_button_text_selector"
            android:textSize="@dimen/_12sdp"
            android:textStyle="bold"
            app:backgroundTint="@null"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/etPassword" />

        <!-- <View
            android:id="@+id/shadow"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="8dp"
            android:background="@drawable/ic_vector_shedow"
            android:foregroundGravity="center_horizontal"
            android:paddingTop="10dp"
            app:backgroundTint="@null"
            app:elevation="30dp"
            app:layout_constraintEnd_toEndOf="@+id/signinBtn"
            app:layout_constraintHorizontal_bias="0.495"
            app:layout_constraintStart_toStartOf="@+id/signinBtn"
            app:layout_constraintTop_toTopOf="@+id/signinBtn" />
-->
        <CheckBox
            android:id="@+id/checkBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="@dimen/_16sdp"
            android:checked="true"
            android:fontFamily="@font/lato"
            android:text="Keep Sign In"
            android:textAlignment="center"
            android:textColor="#293041 "
            android:textSize="@dimen/_10sdp"
            android:textStyle="normal"
            app:layout_constraintStart_toStartOf="@+id/signinBtn"
            app:layout_constraintTop_toBottomOf="@+id/signinBtn" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:clickable="true"
            android:padding="@dimen/_2sdp"
            android:text="@string/forgot_password"
            android:textAlignment="center"
            android:textColor="@color/main"
            android:textColorLink="#FFFFFF"
            android:textSize="@dimen/_10sdp"
            android:textStyle="normal|bold"
            android:translationY="@dimen/_2sdp"
            app:layout_constraintBottom_toBottomOf="@+id/checkBox"
            app:layout_constraintEnd_toEndOf="@+id/signinBtn"
            app:layout_constraintTop_toTopOf="@+id/checkBox" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="@dimen/_10sdp"
            android:text="Don’t have an account?"
            android:textColor="#7D8FAB"
            android:textSize="@dimen/_10sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/checkBox" />

        <Button
            android:id="@+id/btn_signup"
            android:layout_width="@dimen/_245sdp"
            android:layout_height="@dimen/_46sdp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="@dimen/_22sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_22sdp"
            android:layout_marginBottom="@dimen/_15sdp"
            android:background="@drawable/button_selector"
            android:gravity="center"
            android:text="CREATE AN ACCOUNT"
            android:textColor="@drawable/button_text_selector"
            android:textSize="@dimen/_12sdp"
            android:textStyle="bold"
            app:backgroundTint="@null"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView7" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
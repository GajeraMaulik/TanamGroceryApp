    <androidx.cardview.widget.CardView
        android:id="@+id/pdcardView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_201sdp"
        android:layout_gravity="center_horizontal"
        android:layout_margin="@dimen/_10sdp"
        android:foregroundGravity="center"
        android:padding="@dimen/_5sdp"
        app:cardCornerRadius="@dimen/_10sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints">
        


        <ImageView
            android:id="@+id/itemImage"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_108sdp"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/pdimage"
            tools:ignore="ContentDescription" />


        <CheckBox
            android:id="@+id/itemFavorite"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:checked="true"
            android:button="@drawable/pd_selector"
            app:useMaterialThemeColors="false" />

        <TextView
            android:id="@+id/itemName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/_114sdp"
            android:fontFamily="@font/lato"
            android:lineHeight="@dimen/_12sdp"
            android:text="Fresh Avocados"
            android:textColor="#303733"
            android:textFontWeight="600"
            android:textSize="@dimen/_10sdp"
            tools:ignore="HardcodedText,UnusedAttribute" />

        <TextView
            android:id="@+id/itemPrice"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_18sdp"
            android:layout_marginStart="@dimen/_8sdp"
            android:layout_marginTop="@dimen/_138sdp"
            android:fontFamily="@font/poppins"
            android:gravity="center"
            android:lineHeight="@dimen/_12sdp"
            android:text="$ 10.9"
            android:textAlignment="center"
            android:textColor="#C29C1D"
            android:textFontWeight="500"
            android:textSize="@dimen/_10sdp"
            android:textStyle="normal"
            tools:ignore="HardcodedText,UnusedAttribute" />

        <ImageView
            android:id="@+id/itemRating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="@dimen/_142sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            app:srcCompat="@drawable/pd_star_rate_seleted"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/ratingCounter"
            android:layout_width="@dimen/_15sdp"
            android:layout_height="@dimen/_6sdp"
            android:layout_gravity="end"
            android:layout_marginTop="@dimen/_145sdp"
            android:layout_marginEnd="@dimen/_21sdp"
            android:fontFamily="@font/lato"
            android:gravity="center"
            android:paddingEnd="@dimen/_1sdp"
            android:text="(243)"
            android:textColor="#7D8FAB"
            android:textFontWeight="400"
            android:textSize="@dimen/_6sdp"
            tools:ignore="HardcodedText,RtlSymmetry,UnusedAttribute" />

        <Button
            android:id="@+id/itemAdd"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_28sdp"
            android:gravity="center_horizontal|top"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginLeft="@dimen/_8sdp"
            android:layout_marginRight="@dimen/_8sdp"
            android:layout_marginBottom="@dimen/_8sdp"
            android:background="@drawable/cart_button"
            android:fontFamily="@font/lato"
            android:textStyle="bold"
            android:text="Add to cart"
            android:textAllCaps="false"
            android:textFontWeight="600"
            android:textSize="@dimen/_10sdp"
            app:backgroundTint="@null"
            tools:ignore="HardcodedText,UnusedAttribute" />


        <LinearLayout
            android:id="@+id/itemQty"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_28sdp"
            android:gravity="center"
            android:visibility="gone"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_marginLeft="@dimen/_8sdp"
            android:layout_marginRight="@dimen/_8sdp"
            android:layout_marginBottom="@dimen/_8sdp">

            <ImageButton
                android:id="@+id/btnMinus"
                android:layout_width="@dimen/_28sdp"
                android:layout_height="@dimen/_28sdp"
                android:gravity="center"
                android:padding="@dimen/_1sdp"
                android:src="@drawable/ic_pl_minus_icon"
                android:layout_gravity="center"
                android:background="@drawable/ic_pl__minus_box"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/tvQuantity"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_15sdp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:fontFamily="@font/lato"
                android:gravity="center"
                android:lineHeight="@dimen/_10sdp"
                android:text="1"
                android:textColor="@color/main"
                android:textSize="@dimen/_9sdp"
                tools:ignore="HardcodedText,UnusedAttribute" />

            <ImageButton
                android:id="@+id/btnAdd"
                android:layout_width="@dimen/_28sdp"
                android:layout_height="@dimen/_28sdp"
                android:gravity="center"
                android:textAlignment="center"
                android:padding="@dimen/_1sdp"
                android:src="@drawable/ic_pl_add_icon"
                android:layout_gravity="center"
                android:background="@drawable/ic_pl_add_box"
                tools:ignore="ContentDescription" />

        </LinearLayout>


    </androidx.cardview.widget.CardView>



</androidx.constraintlayout.widget.ConstraintLayout>

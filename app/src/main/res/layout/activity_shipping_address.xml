<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ShippingAddressActivity"
    tools:ignore="MissingClass">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/saToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        app:buttonGravity="center_vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/_16sdp"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/saBackBtn"
                android:layout_width="@dimen/_17sdp"
                android:layout_height="@dimen/_13sdp"
                android:padding="@dimen/_2sdp"
                android:layout_gravity="center_vertical"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_cart_arrow_back" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="@dimen/_27sdp"
                android:fontFamily="@font/poppins"
                android:layout_marginStart="@dimen/_10sdp"
                android:text="Checkout"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:textFontWeight="700"
                android:textSize="@dimen/_20sdp"
                android:textStyle="normal"
                tools:ignore="UnusedAttribute" />

        </LinearLayout>
    </androidx.appcompat.widget.Toolbar>
    <LinearLayout
        android:id="@+id/stepperView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_86sdp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/saToolbar"
        tools:ignore="MissingConstraints">

    <params.com.stepview.StatusViewScroller
        android:id="@+id/stepper"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_86sdp"
        app:circleColor="@color/white"
        app:completeDrawable="@drawable/ic_complet_check_circle"
        app:currentDrawable="@drawable/ic_seleted_check_circle"
        app:incompleteDrawable="@drawable/ic_unseleted_check_circle"
        app:circleColorCurrent="@color/white"
        app:currentCount="2"
        app:drawLabels="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/saToolbar"
        app:lineColor="@color/main"
        app:lineColorCurrent="@color/main"
        app:lineColorIncomplete="@color/grey02"
        app:lineLength="@dimen/_40sdp"
        app:lineWidth="@dimen/_1sdp"
        app:stepCount="3"
        app:textSizeLabels="@dimen/_15sdp"
        tools:ignore="MissingConstraints" />
    </LinearLayout>


    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/frame_stepper"
        android:name="androidx.navigation.fragment.NavHostFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/stepperView"
        app:navGraph="@navigation/nav_stepper" />
</androidx.constraintlayout.widget.ConstraintLayout>
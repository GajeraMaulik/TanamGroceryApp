<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.tanamgroceryapp">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".ApplicationInitialize"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.TanamGroceryApp"
        tools:ignore="MissingClass"
        android:fullBackupContent="@xml/backup_descriptor">
        <activity
            android:name=".Activity.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".Activity.ShippingAddressActivity" />
        <activity android:name=".Activity.ProductDetailsActivity" />
        <activity android:name=".Activity.ProductsActivity"/>
        <activity android:name=".Activity.SearchFilterActivity" />
        <activity android:name=".Activity.SearchResultsActivity" />
        <activity android:name=".Activity.ProductCategoriesActivity" />
        <activity android:name=".Activity.ShoppingCartActivity" />
        <activity android:name=".Activity.HomeActivity" />
        <activity android:name=".Activity.SignUpActivity" />
        <activity android:name=".Activity.SignInActivity" />
        <activity android:name=".Activity.SreenActivity" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>